<div class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h2 class="title is-2">Change your password</h2>

                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= f.error_notification %>

                  <%= f.input :reset_password_token, as: :hidden %>
                  <%= f.full_error :reset_password_token %>

                  <div class="form-group">
                      <%= f.label :password, "New password", class: "label" %>
                      <div class="control">
                          <%= f.input_field :password, required: true, autofocus: true, class: "form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                      </div>
                  </div>

                  <div class="form-group">
                      <%= f.label :password_confirmation, "Confirm your new password", class: "label" %>
                      <div class="control">
                          <%= f.input_field :password_confirmation, required: true, class: "form-control" %>
                      </div>
                  </div>

                  <div class="form-group">
                      <div class="control">
                          <%= f.button :submit, "Change my password", class: "btn btn-outline-primary btn-block" %>
                      </div>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>
