<div class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h2 class="title is-2">Forgot your password?</h2>

                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= f.error_notification %>

                    <div class="form-group">
                        <%= f.label :email, class: "label" %>
                        <div class="control">
                            <%= f.input_field :email, required: true, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <div class="control">
                            <%= f.button :submit, "Send me reset password instructions", class: "btn btn-outline-primary btn-block" %>
                        </div>
                    </div>
                <% end %>

                <br />
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>
