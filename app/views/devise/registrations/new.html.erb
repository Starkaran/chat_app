<div class="section">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-md-4">

                <h2 class="title is-2">Sign Up</h2>

                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>

                <div class="form-group">
                    <%= f.label :name, class: "label" %>
                    <div class="control">
                        <%= f.input_field :name, required: true, autofocus: true, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :email, class: "label" %>
                    <div class="control">
                        <%= f.input_field :email, required: true, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :password, class: "label" %>
                    <div class="control">
                        <%= f.input_field :password, required: true, class: "form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :password_confirmation, class: "label" %>
                    <div class="control">
                        <%= f.input_field :password_confirmation, required: true, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <div class="control">
                        <%= f.button :submit, "Sign up", class: "btn btn-outline-primary btn-block" %>
                    </div>
                </div>

                <% end %>
                <br />
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>
